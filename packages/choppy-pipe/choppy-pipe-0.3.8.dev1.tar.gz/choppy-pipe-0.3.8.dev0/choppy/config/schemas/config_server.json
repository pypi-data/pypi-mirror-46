{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "port": {
      "type": ["integer", "string"],
      "is_port": true
    },
    "host": { "type": "string" },
    "data_dir": { "type": "string" },
    "log_level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "CRITICAL", "FATAL"]
    },
    "log_dir": {
      "type": "string"
    },
    "app_root_dir": { "type": "string" }
  },
  "additionalProperties": false,
  "required": [
    "port",
    "host",
    "data_dir",
    "log_level",
    "log_dir",
    "app_root_dir"
  ]
}
