---
doc:
  short_help: Sets a connector-internal variable.

args:
  var:
    doc:
      short_help: the var name
    type: string
    required: true
    empty: false
  value:
    doc:
      short_help: the value
    type: string
    required: true

frecklets:
  - task:
      type: ansible-module
    frecklet:
      name: set_fact
      msg: "setting internal var {{:: var ::}}"
    vars:
      "{{:: var ::}}": "{{:: value ::}}"
