doc:
  short_help: "Ensures Virtualbox is installed."
  help: |
    Installs the Virtualbox VM manager package.
  further_reading:
    "Virtualbox homepage": https://www.virtualbox.org
    "freckfrackery.install-virtualbox Ansible role": https://gitlab.com/freckfrackery/freckfrackery.install-virtualbox
  examples:
    - title: Install Virtualbox.

meta:
  tags:
    - install
    - virtualbox
    - vm
    - virtualization
    - featured-frecklecutable

frecklets:
  - frecklet:
      name: freckfrackery.install-virtualbox
      type: ansible-role
      msg: installing Virtualbox
      elevated: true
      internet: true
      idempotent: true
      references:
        "'freckfrackery.install-virtualbox' Ansible role": "https://gitlab.com/freckfrackery/freckfrackery.install-virtualbox"
    vars:
      use_virtualbox_oracle_repo: false
