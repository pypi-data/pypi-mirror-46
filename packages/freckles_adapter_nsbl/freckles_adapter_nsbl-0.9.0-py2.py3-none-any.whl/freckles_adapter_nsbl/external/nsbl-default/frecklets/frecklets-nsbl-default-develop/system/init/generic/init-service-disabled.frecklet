---
doc:
  short_help: "Disable init-service."
  help: |
    Make sure an init service is disabled.
  examples:
    - title: Disable the 'apache2' service.
      desc: |
        This doesn't stop the service if it is currently running.
      vars:
        name: apache2

meta:
  tags:
    - init
    - systemd
    - service

args:
  name:
    doc:
      short_help: "The name of the service."
    type: string
    required: true
    cli:
      metavar: SERVICE_NAME
      param_type: argument

frecklets:
  - init-service-configured:
      name: "{{:: name ::}}"
      enabled: false
