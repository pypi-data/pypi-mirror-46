{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["status", "stage", "priority", "payload", "analytics"],
    "properties": {
      "status": {
        "bsonType": "string",
        "description": "must be a string and is required",
        "enum": ["new", "processing", "pass", "fail"]
      },
      "stage": {
        "bsonType": "int",
        "minimum": 0,
        "description": "must be an integer and is required"
      },
      "priority": {
        "bsonType": "int",
        "description": "must be an integer and default is 0"
      },
      "payload": {
        "bstonType": "object",
        "description": "can contain virtually anything"
      },
      "analytics": {
        "bstonType": "object",
        "description": "can contain virtually anything"
      }
    }
  }
}
