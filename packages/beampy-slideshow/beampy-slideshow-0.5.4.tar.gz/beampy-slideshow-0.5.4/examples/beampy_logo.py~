"""
File to create the beampy logo
"""

from beampy import *

python_yellow = ''
python_blue = ''

doc = document(width=200, 200)

with slide():
    r0 = rectangle(width='30%', height='30%', color=python_yellow)
    r1 = rectangle(width='30%', height='30%', color=python_blue)
    r2 = rectangle(width='30%', height='30%', color=python_yellow, opacity=0.5)
