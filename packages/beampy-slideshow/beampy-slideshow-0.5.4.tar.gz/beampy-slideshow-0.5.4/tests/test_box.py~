from beampy import *
from beampy.utils import box

# Remove quiet=True to get Beampy render outputs
doc = document(cache=False)


with slide('Add nice boxes to group'):

    with box(title='Very very very long box title', width=300, height=500, x=20, y='center') as g:
        text('Box text')
    
    with box(title='Change color and drop-shadow', title_align='center', color='forestgreen',
             shadow=True, width=450, height=None, x=g.right+10, y=g.top+0) as g2:
        text('Box text, with a centered title')
        text('tutututu tutut tutuu')
    g2.add_border()

    with box(color='darkorange', rounded=70, background_color='lightgray', linewidth=4,
             width=450, x=g.right+10, y=g2.bottom+20) as g3:
        
        text('''
            Without title for the box, more rounded angle, bigger
            linewidth, and a background color
            ''', align='center', width="80%")
            
    
save('./html_out/test_box.html')
