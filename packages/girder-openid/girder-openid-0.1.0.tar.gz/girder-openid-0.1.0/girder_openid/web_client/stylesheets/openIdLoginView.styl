.g-openid-container
  margin-top 20px

  .g-openid-section-header
    height 2px
    background-color #dcd6d6
    margin-bottom 16px
    font-size 12px
    text-align center

  .g-openid-section-header-text
    display inline
    background-color #fff
    position relative
    top -7px
    padding 0 7px
    color #878080

.g-openid-button
  width 160px
  border-radius 3px
  padding 7px 11px
  display inline-block
  cursor pointer
  margin-right 15px
  margin-bottom 10px
