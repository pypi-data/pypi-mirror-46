graft examples

include basesetup.py
include pyproject.toml

recursive-include mdtraj *.h *.hxx *.hpp *.c *.cpp *.cxx *.pxd *.pyx *.pxi

prune __pycache__
prune *.pyc
prune .gitignore

# exclude generated cython files from the source archive
# because of bugs like: https://github.com/mdtraj/mdtraj/issues/1429
exclude mdtraj/formats/binpos/binpos.c \
  mdtraj/formats/xtc/xtc.c \
  mdtraj/formats/xtc/trr.c \
  mdtraj/formats/dcd/dcd.c \
  mdtraj/formats/dtr/dtr.c \
  mdtraj/formats/tng/tng.c \
  mdtraj/geometry/neighbors.cpp \
  mdtraj/geometry/src/_geometry.cpp \
  mdtraj/geometry/neighborlist.cpp \
  mdtraj/geometry/drid.cpp \
  mdtraj/rmsd/_lprmsd.cpp \
  mdtraj/rmsd/_rmsd.c

